{
  "compilerOptions": {
    "target": "ES2020",                       /* Specify ECMAScript target version */
    "lib": ["ES2020", "DOM"],                 /* Specify library files to be included in the compilation. */
    "module": "NodeNext",                     /* Specify module code generation: 'NodeNext' for ES modules in Node.js */
    "moduleResolution": "NodeNext",           /* Specify module resolution strategy */
    "outDir": "./build",                      /* Redirect output structure to the directory */
    "rootDir": "./src",                       /* Specify the root directory of input files */
    "strict": true,                           /* Enable all strict type-checking options */
    "esModuleInterop": true,                  /* Enables emit interoperability between CommonJS and ES Modules */
    "skipLibCheck": true,                     /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased references to the same file */
    "resolveJsonModule": true                 /* Include modules imported with .json extension */
  },
  "include": ["src/**/*"],                    /* Specifies the files to be included in compilation */
  "exclude": ["node_modules", "**/*.spec.ts"] /* Specifies files to be excluded */
}
